<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/small_item_spacing"
    android:layout_margin="@dimen/small_item_spacing">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/todo_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/todo_item_finished_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/todo_item_task_name"
            style="@style/TextAppearance.MaterialComponents.Headline5"
            android:layout_width="@dimen/match_constraint"
            android:layout_height="wrap_content"
            android:text="HELLO"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/todo_item_finished_checkbox"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/todo_item_due_datetime"
            style="@style/TextAppearance.Datetime.Body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12/1/19"
            app:layout_constraintStart_toEndOf="@id/todo_item_finished_checkbox"
            app:layout_constraintTop_toBottomOf="@id/todo_item_task_name" />

        <View
            style="@style/Divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/todo_item_due_datetime" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/todo_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/todo_item_due_datetime">

            <TextView
                android:id="@+id/set_date_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Set Date:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>
